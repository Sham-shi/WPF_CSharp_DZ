<Window
    x:Class="Task2.Question4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Task2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Question4"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <StackPanel Margin="10">
        <TextBlock Margin="0,0,0,10" Text="4. Какие из этих конструкций используются для обработки исключений в C#?" />

        <CheckBox Name="q4Answer1" Content="try-catch" />
        <CheckBox
            Name="q4Answer2"
            Margin="0,5,0,5"
            Content="if-else" />
        <CheckBox Name="q4Answer3" Content="finally" />
        <CheckBox
            Name="q4Answer4"
            Margin="0,5,0,0"
            Content="switch-case" />
        <Button
                Name="endButton"
                Width="120"
                Height="30"
                Margin="0 100 0 0"
                Click="EndButton_Click"
                Content="Завершить тест" />
    </StackPanel>
</Window>
