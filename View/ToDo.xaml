<Window
    x:Class="View.ToDo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:ViewModel;assembly=ViewModel"
    Title="ToDo"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodel:ToDoViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" ItemsSource="{Binding Tasks}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox
                            Margin="5"
                            CommandParameter="{Binding}"
                            IsChecked="{Binding IsComplete, Mode=TwoWay}" />
                        <!--Command="{Binding DataContext.ToggleTaskCompletionCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"-->

                        <TextBlock
                            Width="300"
                            VerticalAlignment="Center"
                            Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="10 10 10 0">
                <Label Content="Название" />
                <TextBox
                    Width="350"
                    Height="40"
                    Text="{Binding TextTask}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <Button
                    Width="140"
                    Height="30"
                    Command="{Binding AddTaskCommand}"
                    Content="Добавить" />
                <Button
                    Width="140"
                    Height="30"
                    Margin="300 0 0 0"
                    Click="SaveButton_Click"
                    Content="Сохранить" />
                <Button
                    Width="140"
                    Height="30"
                    Margin="10 0 0 0"
                    Click="LoadButton_Click"
                    Content="Зазгрузить" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
